@model PBMS.Models.Product

@{
    ViewData["Title"] = ViewBag.IsEdit ? "Edit Product" : "Create Product";
    var isEdit = ViewBag.IsEdit;
}

<div class="d-flex justify-content-between align-items-center">
    <h1>@ViewData["Title"]</h1>
    <a asp-action="Index" class="btn btn-primary">Back</a>
</div>

<form action="@(isEdit ? "Edit":"Create")" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="Name" class="form-label">Product Name</label>
        <input class="form-control" asp-for="Name" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Price" class="control-label"></label>
        <input asp-for="Price" class="form-control" step="0.01" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Qty" class="control-label">Quantity</label>
        <input asp-for="Qty" class="form-control" />
        <span asp-validation-for="Qty" class="text-danger"></span>
    </div>
    <div class="mt-3">
        <button type="submit" class="btn btn-primary">@(isEdit ? "Edit" : "Create")</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>